#
# TypeC Port Controller Device Configuration
#

config TCPC_CLASS
	tristate "TypeC Port Controller Device Class"
	select MTK_USB_TYPEC
	select RT_REGMAP
	select TYPEC
	help
	  Say Y to enable
	  Typec Port
	  Controller Device
	  Class

config USB_POWER_DELIVERY
	tristate "Support USB power delivery Function"
	depends on TCPC_CLASS
	default n
	help
	  Say Y to enable
	  USB
	  Power Delivery
	  support

config DUAL_ROLE_USB_INTF
	tristate "Support DUAL ROLE USB INTF Function"
	depends on TCPC_CLASS
	default n
	help
	  Say Y to enable
	  Dual Role USB Intf
	  support

config TCPC_RT1711H
	tristate "Richtek RT1711H TypeC port Controller Driver"
	depends on TCPC_CLASS
	default n
	help
	  Say Y to enable
	  Richtek RT1711H
          TypeC port Controller
 	  Driver

config TCPC_SC660X
	tristate "SouthChip SC660X TypeC port Controller Driver"
	depends on TCPC_CLASS
	default n
	help
	  Say Y to enable
	  SouthChip SC660X
	  TypeC port Controller
	  Driver

